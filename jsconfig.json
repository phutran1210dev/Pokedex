{
  "compilerOptions": {
    "checkJs": false,
    "target": "es2020",
    "module": "es2015",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@api": ["src/api"],
      "@assets": ["src/assets/*"],
      "@components": ["src/components/*"],
      "@configs": ["src/configs/*"],
      "@constants": ["src/constants"],
      "@data": ["src/data"],
      "@navigations": ["src/navigations"],
      "@redux": ["src/redux"],
      "@Slices": ["src/redux/Slices/*"],
      "@screens": ["src/screens"],
      "@utils": ["src/utils"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "build",
    ".vscode",
    "coverage",
    ".npm",
    ".yarn"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "react",
      "react-dom",
      "jest",
      "testing-library__jest-dom",
      "src"
    ]
  }
}
